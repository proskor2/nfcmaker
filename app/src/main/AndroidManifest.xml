<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="store.dide.nfcmaker">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".views.MasterNFCError"
            android:exported="false"
            android:parentActivityName=".views.MasterQRActivity"/>
        <activity
            android:name=".views.MasterWriteResult"
            android:exported="false"/>
        <activity
            android:name=".views.MasterNFCActivity"
            android:exported="false"
            android:parentActivityName=".views.MasterQRActivity"/>
        <activity
            android:name=".views.MasterQRActivity"
            android:exported="false"
            android:parentActivityName=".views.MainActivity"/>
        <activity
            android:name=".views.CreateNewListActivity"
            android:exported="false"
            android:parentActivityName=".views.ListNumbersActivity"/>
        <activity
            android:name=".views.ListViewerActivity"
            android:exported="false"
            android:parentActivityName=".views.ListNumbersActivity"/>
        <activity
            android:name=".views.ListNumbersActivity"
            android:exported="false"
            android:parentActivityName=".views.MainActivity"/>
        <activity
            android:name=".views.AuthorizationActivity"
            android:exported="true"
            android:theme="@style/AppTheme.FullScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".views.MainActivity"
            android:exported="false" />
        <activity
            android:name=".views.StatisticActivity"
            android:exported="false"
            android:parentActivityName=".views.MainActivity"/>
    </application>

</manifest>